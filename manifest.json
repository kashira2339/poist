{
    "name": "Poist",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Poist create post-it every domain. drop image, movie, and pdf from your computer to poist.",
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "icons": {
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128":"icon/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/env.js",
                "js/poist_holder.js",
                "js/poist.js",
                "js/main.js"
            ],
            "css": ["css/main.css"]
        }
    ]
}
